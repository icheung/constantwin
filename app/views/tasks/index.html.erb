<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Duration</th>
    <th>Owner</th>
    <th>Is finished</th>
    <th>Time left</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.description %></td>
    <td><%=h task.duration.strftime('%I:%M') %></td>
    <td><%=h task.owner %></td>
    <td><%=h task.is_finished %></td>
    <td>  
      <% if task.started_at %>  
        <%= Time.at(task.duration - Time.at(Time.now - task.started_at) - 9.hours).strftime('%H:%M') %> 
      <% else %>  
        <%= link_to 'Start', start_task_path %>  
      <% end %>  
    </td>  
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

