<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Duration</th>
    <th>Owner</th>
    <th>Is finished</th>
    <th>Time left</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.description %></td>
    <td><%=h task.duration %></td>
    <td><%=h task.user_id %></td>
    <td><%=h task.is_finished %></td>
    <td>  
      <% if task.started_at %>  
        <%= task.duration %> 
      <% else %>  
				<%= link_to 'Start', {:action => "start", :task_id => task.id} %>  
      <% end %>  
    </td>  
    <td><%= link_to 'Add time', add_time_path(task) %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Delete', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>
